{
  "version": 2,
  "builds": [
    {
      "src": "santosh_website/wsgi.py",
      "use": "@vercel/python",
      "config": { 
        "maxLambdaSize": "15mb", 
        "runtime": "python3.11"
      }
    },
    {
      "src": "build_files.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles_build/static"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/staticfiles_build/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "santosh_website/wsgi.py"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "santosh_website.settings"
  }
}
